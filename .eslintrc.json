{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "dot-notation": ["error", { "allowPattern": "^[A-Z]+(_[A-Z]+)+$" }],
        "indent": ["error", 4],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "object-shorthand": [2, "consistent-as-needed"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "semi": ["error", "never"]
    }
}
